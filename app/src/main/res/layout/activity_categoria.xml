<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categoria">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWelcome3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/welcome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et01categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID_Categoria"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et02categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et03categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-80dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="agregarCategoria"
                android:text="Registrar Categoria" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buscarCategoria"
                android:text="Buscar Categoria" />

            <Button
                android:id="@+id/btn03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="modificarCategoria"
                android:text="Modificar Categoria" />

            <Button
                android:id="@+id/btn04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="eliminarCategoria"
                android:text="Eliminar categoria" />

            <Button
                android:id="@+id/btn05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="main"
                android:text="Regresar" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageFooter4"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/footer"
            tools:layout_marginLeft="25dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>