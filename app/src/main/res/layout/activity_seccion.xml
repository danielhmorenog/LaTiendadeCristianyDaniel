<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seccion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWelcome7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/welcome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="agregarSeccion"
                    android:text="Registrar Seccion" />

                <Button
                    android:id="@+id/btn02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="buscarSeccion"
                    android:text="Buscar Seccion" />

                <Button
                    android:id="@+id/btn03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="modificarSeccion"
                    android:text="Modificar Seccion" />

                <Button
                    android:id="@+id/btn04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="eliminarSeccion"
                    android:text="Eliminar Seccion" />

                <Button
                    android:id="@+id/btn05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="main"
                    android:text="Regresar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et01seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CC"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et02seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et03seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et04seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Direccion"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et05seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefono"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et06seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et07seccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageFooter8"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            app:srcCompat="@drawable/footer"
            tools:layout_marginLeft="25dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>