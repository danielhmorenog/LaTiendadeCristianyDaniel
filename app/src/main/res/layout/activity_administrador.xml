<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:foregroundGravity="center"
      android:orientation="vertical">


    <ImageView
        android:id="@+id/imageWelcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-65dp"
        app:srcCompat="@drawable/welcome" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="-20dp"
        android:orientation="vertical">

      <Button
          android:id="@+id/btn01"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="categoria"
          android:text="Categoria" />

      <Button
          android:id="@+id/btn02"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:onClick="compra"
          android:text="Compra" />

      <Button
          android:id="@+id/btn03"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:onClick="compraProducto"
          android:text="Compra Producto" />

      <Button
          android:id="@+id/btn04"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:onClick="producto"
          android:text="producto" />

      <Button
          android:id="@+id/btn05"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:onClick="seccion"
          android:text="Seccion" />

      <Button
          android:id="@+id/btn06"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:onClick="tienda"
          android:text="Tienda" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageFooter2"
        android:layout_width="463dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/footer"
        tools:layout_marginLeft="25dp" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>