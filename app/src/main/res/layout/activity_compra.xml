<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Compra">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWelcome5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/welcome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et01compra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID_Compra"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et02compra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CC"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et03compra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="agregarCompra"
                android:text="Registrar Compra" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buscarCompra"
                android:text="Buscar Compra" />

            <Button
                android:id="@+id/btn03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="modificarCompra"
                android:text="Modificar Compra" />

            <Button
                android:id="@+id/btn04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="eliminarCompra"
                android:text="Eliminar Compra" />

            <Button
                android:id="@+id/btn05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="main"
                android:text="Regresar" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageFooter3"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/footer"
            tools:layout_marginLeft="25dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>