<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Producto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWelcome6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/welcome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et01producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID_Producto"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et02producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et03producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DescripciÃ³n"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et04producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et05producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et06producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Unidad"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et07producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID_Categoria"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et08producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIT_Tienda"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="agregarProducto"
                    android:text="Registrar Producto" />

                <Button
                    android:id="@+id/btn02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="buscarProducto"
                    android:text="Buscar Producto" />

                <Button
                    android:id="@+id/btn03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="modificarProducto"
                    android:text="Modificar Producto" />

                <Button
                    android:id="@+id/btn04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="eliminarProducto"
                    android:text="Eliminar Producto" />

                <Button
                    android:id="@+id/btn05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="main"
                    android:text="Regresar" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageFooter6"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/footer"
            tools:layout_marginLeft="25dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>