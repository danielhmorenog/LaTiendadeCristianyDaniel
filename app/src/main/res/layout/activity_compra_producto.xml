<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompraProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWelcome4"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginLeft="-110dp"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/welcome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et01compraProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID_Compra"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et02compraProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID_Producto"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et03compraProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID_Compra"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et04compraProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cantidad"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-100dp"
            android:layout_marginRight="-10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="agregarCompraProducto"
                android:text="Registrar Compra_Producto" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buscarCompraProducto"
                android:text="Buscar Compra_Producto" />

            <Button
                android:id="@+id/btn03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="modificarCompraProducto"
                android:text="Modificar Compra_Producto" />

            <Button
                android:id="@+id/btn04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="eliminarCompraProducto"
                android:text="Eliminar Compra_Producto" />

            <Button
                android:id="@+id/btn05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="main"
                android:text="Regresar" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageFooter5"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/footer"
            tools:layout_marginLeft="25dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>