<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-45dp"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/welcome" />

        <ImageButton
            android:id="@+id/imageButtonLocation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/location" />

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-12dp"
            android:text="Administrador" />

        <ImageButton
            android:id="@+id/btn_navegar"
            android:layout_width="217dp"
            android:layout_height="49dp"
            android:layout_marginLeft="-32dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:scaleType="center"
            app:srcCompat="@drawable/checkcat" />

        <ImageButton
            android:id="@+id/btnSalirR"
            android:layout_width="219dp"
            android:layout_height="42dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:scaleType="center"
            app:srcCompat="@drawable/leave" />

        <ImageView
            android:id="@+id/imageFooter"
            android:layout_width="462dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            app:srcCompat="@drawable/footer"
            tools:layout_marginLeft="0dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>